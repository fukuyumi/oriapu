<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="filed">
    <%= f.label "ニックネーム" %><br />
    <%= f.text_area :nick_name %>
  </div>

  <div class="filed">
    <%= f.label "姓（全角）" %><br />
    <%= f.text_area :family_name %>
  </div>

  <div class="filed">
    <%= f.label "名（全角）" %><br />
    <%= f.text_area :first_name %>
  </div>

  <div class="filed">
    <%= f.label "姓カナ（全角）" %><br />
    <%= f.text_area :family_name_kana %>
  </div>

  <div class="filed">
    <%= f.label "名カナ（全角）" %><br />
    <%= f.text_area :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label "パスワード 6文字以上半角英数字（英字と数字の両方を含めて設定してください）" %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label "パスワード（確認用）" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

